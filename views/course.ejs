<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Video</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
    <meta content="Coderthemes" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="/assets/images/favicon.ico">

    <!-- UNICONS -->
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">


    <!-- App css -->
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="/assets/css/app.min.css" rel="stylesheet" type="text/css" />
    <link href="/assets/css/styles.css" rel="stylesheet" type="text/css" />

    <!-- JS & JQUERY -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/waypoints/4.0.1/jquery.waypoints.min.js"></script>


</head>

<body>

    <!-- ================== NAVBAR ================== -->
    <%- include('./partials/navbar.ejs') %>

    <div class="wrapper">
        <div class="container-fluid">
            <div class="h1 text-dark mt-1"><%= course.title %></div>
            <div class="row">
                <div class="col-sm-8">
                    <div class="video">
                        <iframe src="https://www.youtube.com/embed/xSrricvmTv8"
                        title="YouTube video player" frameborder="0"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen></iframe>
                    </div>



                    <form action="/comment" method="POST" class="card-box">
                        <span class="input-icon icon-right">
                            <textarea required name="body" rows="3" class="form-control" placeholder="Post a new message"></textarea>
                        </span>
                        <div class="pt-1 float-right">
                            <button class="btn btn-primary btn-sm waves-effect waves-light">Send</button>
                        </div>
                        <ul class="nav nav-pills profile-pills mt-1">
                            <li>
                                <a href="#"><i class="uil uil-user"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="uil uil-message"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="uil uil-camera"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="uil uil-smile"></i></a>
                            </li>
                        </ul>

                    </form>
                    <div class="card-box">
                        <div class="media mb-2">
                            <div class="media-body">
                                <% if(comments.length > 0) {%>
                                    <% comments.forEach(comment => { %>
                                <h5 class="mt-0"><a href="#" class="text-dark">Adam Jansen</a><small
                                    <% var date= (comment.createdAt + ''); %>
                                    <% date= date.split("GMT")[0]; %>
                                        class="ml-1 text-muted"><%= date %></small></h5>
                                <p><%= comment.body %></p>
                                <div class="comment-footer pt-2 mb-3">
                                    <a href="#"><i class="uil uil-thumbs-up"></i></i></a>
                                    <a href="#"><i class="uil uil-thumbs-down"></i></a>
                                    <a href="#">Reply</a>
                                </div>

                                    <% }) %>
                                <% } %>
                            </div>
                        </div>
                        <div class="text-center">
                            <a href="" class="text-danger"><i class="mdi mdi-spin mdi-loading mr-1"></i> Load more </a>
                        </div>
                    </div>

                </div>

                <div class="col-sm-4">
                    <div class="card-box">
                        <div class="dropdown float-right">
                            <a href="#" class="dropdown-toggle arrow-none card-drop" data-toggle="dropdown"
                                aria-expanded="false">
                                <i class="uil uil-elipsis-double-v-alt"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <!-- item-->
                                <a href="javascript:void(0);" class="dropdown-item">About Athena</a>
                                <!-- item-->
                                <a href="javascript:void(0);" class="dropdown-item">Other Courses</a>
                                <!-- item-->
                                <a href="javascript:void(0);" class="dropdown-item">Contact Us</a>
                            </div>
                        </div>

                        <h4 class="header-title mt-0 mb-3">The Team Members</h4>

                        <ul class="list-group mb-0 user-list">
                            <li class="list-group-item">
                                <a href="#" class="user-list-item">
                                    <div class="user avatar-sm float-left mr-2">
                                        <i class="uil uil-bitcoin-alt"></i>
                                    </div>
                                    <div class="user-desc">
                                        <h5 class="name mt-0 mb-1">Michael Zenaty</h5>
                                        <p class="desc text-muted mb-0 font-12">CEO</p>
                                    </div>
                                </a>
                            </li>

                            <li class="list-group-item">
                                <a href="#" class="user-list-item">
                                    <div class="user avatar-sm float-left mr-2">
                                        <i class="uil uil-amazon"></i>
                                    </div>
                                    <div class="user-desc">
                                        <h5 class="name mt-0 mb-1">James Neon</h5>
                                        <p class="desc text-muted mb-0 font-12">Web Designer</p>
                                    </div>
                                </a>
                            </li>

                            <li class="list-group-item">
                                <a href="#" class="user-list-item">
                                    <div class="user avatar-sm float-left mr-2">
                                        <i class="uil uil-facebook"></i>
                                    </div>
                                    <div class="user-desc">
                                        <h5 class="name mt-0 mb-1">John Smith</h5>
                                        <p class="desc text-muted mb-0 font-12">Web Developer</p>
                                    </div>
                                </a>
                            </li>

                            <li class="list-group-item">
                                <a href="#" class="user-list-item">
                                    <div class="user avatar-sm float-left mr-2">
                                        <i class="uil uil-google-drive-alt"></i>
                                    </div>
                                    <div class="user-desc">
                                        <h5 class="name mt-0 mb-1">Michael Zenaty</h5>
                                        <p class="desc text-muted mb-0 font-12">Programmer</p>
                                    </div>
                                </a>
                            </li>

                            <li class="list-group-item">
                                <a href="#" class="user-list-item">
                                    <div class="user avatar-sm float-left mr-2">
                                        <i class="uil uil-apple"></i>
                                    </div>
                                    <div class="user-desc">
                                        <h5 class="name mt-0 mb-1">Mat Helme</h5>
                                        <p class="desc text-muted mb-0 font-12">Manager</p>
                                    </div>
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div class="card-box">
                        <div class="dropdown float-right">
                            <a href="#" class="dropdown-toggle arrow-none card-drop" data-toggle="dropdown"
                                aria-expanded="false">
                                <i class="uil uil-elipsis-double-v-alt"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <!-- item-->
                                <a href="javascript:void(0);" class="dropdown-item">Action</a>
                                <!-- item-->
                                <a href="javascript:void(0);" class="dropdown-item">Another action</a>
                                <!-- item-->
                                <a href="javascript:void(0);" class="dropdown-item">Something else</a>
                                <!-- item-->
                                <a href="javascript:void(0);" class="dropdown-item">Separated link</a>
                            </div>
                        </div>

                        <h4 class="header-title mt-0 mb-3"><i class="uil uil-bars"></i></i> Next on the Playlist</h4>

                        <ul class="list-group mb-0 user-list">
                            <li class="list-group-item">
                                <a href="#" class="user-list-item">
                                    <div class="user-desc overflow-hidden">
                                        <h5 class="name mt-0 mb-1">Video 2</h5>
                                        <span class="desc text-muted font-12 text-truncate d-block">1.5 hr</span>
                                    </div>
                                </a>
                            </li>
                            <li class="list-group-item">
                                <a href="#" class="user-list-item">
                                    <div class="user-desc overflow-hidden">
                                        <h5 class="name mt-0 mb-1">Video 3</h5>
                                        <span class="desc text-muted font-12 text-truncate d-block">2.5 hr</span>
                                    </div>
                                </a>
                            </li>
                            <li class="list-group-item">
                                <a href="#" class="user-list-item">
                                    <div class="user-desc overflow-hidden">
                                        <h5 class="name mt-0 mb-1">Video 4</h5>
                                        <span class="desc text-muted font-12 text-truncate d-block">0.5 hr</span>
                                    </div>
                                </a>
                            </li>
                            <li class="list-group-item">
                                <a href="#" class="user-list-item">
                                    <div class="user-desc overflow-hidden">
                                        <h5 class="name mt-0 mb-1">Video 5</h5>
                                        <span class="desc text-muted font-12 text-truncate d-block">1 hr</span>
                                    </div>
                                </a>
                            </li>

                        </ul>
                    </div>


                </div>
            </div>
            <!-- end row -->

        </div> <!-- end container -->
    </div>

    <!-- ================== FOOTER =================== -->
    <%- include('./partials/footer.ejs') %>

    <!-- Vendor js -->
    <script src="/assets/js/vendor.min.js"></script>

    <!-- App js-->
    <script src="/assets/js/app.min.js"></script>
    <script src="/assets/js/script.js"></script>

</body>

</html>