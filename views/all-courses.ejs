<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>Athena - All Courses</title>
  <meta content="" name="description">
  <meta content="" name="keywords">

  <!-- Favicons -->
  <link rel="icon" href="/assets/images/favicon.png">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="/assets1/vendor/aos/aos.css" rel="stylesheet">
  <link href="/assets1/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="/assets1/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link href="/assets1/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
  <link href="/assets1/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
  <link href="/assets1/vendor/remixicon/remixicon.css" rel="stylesheet">
  <link href="/assets1/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

  <!-- Template Main CSS File -->
  <link href="/assets1/css/style.css" rel="stylesheet">
  
</head>

<body>
  
  <!-- ================== NAVBAR ================== -->
  <%- include('./partials/navbar1.ejs') %>
  
  <!-- ======= Hero Section ======= -->
  <section id="hero" class="d-flex align-items-center">
    
    <div class="container" data-aos="zoom-out" data-aos-delay="100">
      <div class="row">
        <div class="col-xl-6">
          <h1>Athena</h1>
          <h2 class="mt-3">All Courses</h2>
          <h2>
            <span class="typer text-white" id="main" data-words="InSync,Fourthwall,Rang & Pixels,Literati,Style Up,Comedy Cons,Roots" data-delay="100" data-deleteDelay="1000"></span>
            <span class="cursor" data-owner="main"></span>
          </h2>
          <script async src="https://unpkg.com/typer-dot-js@0.1.0/typer.js"></script>
        </div>
        <div class="col-xl-6">
          <img src="https://drive.google.com/uc?id=16h4WZAFy4Ba1YIMn8oGbnW6OQJ2n-arb" alt="" style="width: 400px;">
        </div>

      </div>
    </div>
    
  </section>
  
  <main id="main">
    
    <section id="testimonials" class="testimonials">
        <div class="container">
          <div class="section-title">
            <h2>All Courses</h2>
            <p>All courses offered by Athena</p>
          </div>
    
          <% for (let j=0; j<(courses.length); j++) { %>
            <% if(j%3 === 0) { %>
            <div class="row my-4"> <% } %>
                <div class="col-md-4">
                    <div class="card align-items-center text-center">
                        <img class="my-2 card-img-top img-fluid" src="../assets/images/card1.jpg" alt="Card image cap">
                        <div class="card-body">
                            <h4 class="card-title"><a href="/course/<%= courses[j]._id %>"><%= courses[j].title %></a></h4>
                            <p class="card-text"><%= courses[j].short_description %></p>
                            <p class="card-text">
                                <small class="text-muted">Last updated 3 mins ago</small>
                            </p>
                        </div>
                    </div>
                </div>
            <% if(j%3 === 2) { %>
            </div> <% } %>
            <% } %>
        </div>
    </section>
    
  </main>
  
  <!-- ======= Footer ======= -->
  <%- include('./partials/footer.ejs') %>
  

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <!-- Vendor JS Files -->
  <script src="/assets1/vendor/purecounter/purecounter.js"></script>
  <script src="/assets1/vendor/aos/aos.js"></script>
  <script src="/assets1/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/assets1/vendor/glightbox/js/glightbox.min.js"></script>
  <script src="/assets1/vendor/isotope-layout/isotope.pkgd.min.js"></script>
  <script src="/assets1/vendor/swiper/swiper-bundle.min.js"></script>
  <script src="/assets1/vendor/php-email-form/validate.js"></script>

  <!-- Template Main JS File -->
  <script src="/assets1/js/main.js"></script>

</body>

</html>